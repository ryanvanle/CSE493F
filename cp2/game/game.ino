        break;
      case 3:
        tone(OUTPUT_PIEZO_PIN, 523);
        display.drawBitmap(64, 15, bongoCat_both2, 62, 34, WHITE);
        break;
      default:
        noTone(OUTPUT_PIEZO_PIN);
